<aura:component controller="CompensationController">
    
    <aura:attribute name="value" type="Compensation__c"/>
    
    
    <td class="slds-cell-edit slds-cell-error" role="gridcell">
        <button id="error-01" class="slds-button slds-button_icon slds-button_icon-error slds-m-horizontal_xxx-small slds-hidden" aria-hidden="true" tabindex="-1" title="Item 1 has errors">
            <lightning:buttonIcon iconName="utility:error" />
        </button>
        <span class="slds-row-number slds-text-body_small slds-text-color_weak"></span>
    </td>
    
    <td role="gridcell">
        <div class="slds-truncate" title="{!v.value.Employee__r.Name}"><a class="slds-th__action" href="javascript:void(0);" role="button" tabindex="-1" onclick="{!c.doEdit}">
            {!v.value.Employee__r.Name}
            </a></div>
    </td>
    <td role="gridcell">
        <div class="slds-truncate" title="{!v.value.Employee__r.Birthdate}">
            <lightning:formattedDateTime value="{!v.value.Employee__r.Birthdate}" year="numeric"
                                         month="long" day="2-digit"/></div>
    </td>
    <td role="gridcell">
        <div class="slds-truncate" title="{!v.value.Job_Category__c }">
            {!v.value.Job_Category__c }</div>
    </td>
    <td role="gridcell">
        <div class="slds-truncate" title="{!v.value.RecordType.Name}">
            {!v.value.RecordType.Name}</div>
    </td>
    <td role="gridcell">
        <div class="slds-truncate" title="{!v.value.Amount__c}">
            {!v.value.Amount__c }</div>
    </td>
    <td role="gridcell">
        <div class="slds-truncate" title="{!v.value.Location__c}">
            {!v.value.Location__c }</div>
    </td>
    <td role="gridcell">
        <div class="slds-truncate" title="{!v.value.Office__c}">
            {!v.value.Office__c }</div>
    </td>
    <td role="gridcell">
        <lightning:input id="{!v.value.Id }" type="checkbox" label="" name="submitted" 
                         checked="{!v.value.Submitted__c }" onclick="{!c.chckSelect}" disabled ="{!v.value.Submitted__c }"/>
    </td>
    
    <td role="gridcell">
        <div class="slds-truncate" title="{!v.value.Status__c}">
            {!v.value.Status__c }</div>
    </td>
    
</aura:component>